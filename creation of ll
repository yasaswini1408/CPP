
#include <bits/stdc++.h>
using namespace std;

class Node{
public: 
    int data;
    Node *next;
    Node(int data_val){
        this->data=data_val;
        this->next=NULL;
    }
}; 

int main()
{
    Node *head=NULL;
    Node *temp=NULL;
    cout<<"enter no. of nodes to be created"<<endl;
    int n;
    cin>>n;
    cout<<"enter the values"<<endl;
    for(int i=0;i<n;i++){
        int val;
        cin>>val;
        Node *nNode=new Node(val);
        if(head==NULL){
            head=nNode;
            temp=nNode;
        }
        else{
            temp->next=nNode;
            temp=temp->next;
        }
    }
    
    // Created linked list printing
    cout << "The linked list contains: ";
    temp=head;
    while(temp!=NULL){
        cout<<temp->data<<" ";
        temp = temp->next; 
    }
    cout << endl; 

    return 0;
}
